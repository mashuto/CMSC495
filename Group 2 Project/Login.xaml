<Page x:Class="Group_2_Project.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      ShowsNavigationUI="False"
	Title="Login">

    <Grid>
        <TextBox x:Name="UserName" HorizontalAlignment="Left" Height="22" Margin="92,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Height="22" Margin="92,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="92,204,0,0" VerticalAlignment="Top" Width="120" Click="Login_Clicked"/>
        <Label Content="User Name" HorizontalAlignment="Left" Margin="92,58,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="92,120,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Page>
